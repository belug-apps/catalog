{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "oneOf": [
    {
      "$ref": "#/definitions/io.belug-apps.v1.HelmValues",
      "not": {"required": ["replicaCount"]}
    }
  ],
  "properties": {
    "persistence": {
      "description": "Configure how the application will manage persistent data.",
      "additionalProperties": {
        "properties": {
          "enabled": {
            "description": "Whether enable persistence for this volume.",
            "type": "boolean"
          },
          "volumeClaimSpec": {
            "$ref": "https://raw.githubusercontent.com/belug-apps/catalog/main/.json_schema/kubernetes/v1.26.1/_definitions.json#/definitions/io.k8s.api.core.v1.PersistentVolumeClaimSpec"
          }
        },
        "type": "object"
      },
      "type": "object"
    },
    "jellyfin": {
      "description": "Configure specific properties to deploy Jellyfin.",
      "properties": {
        "extraDevices": {
          "description": "Additional device to mount, like GPU",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "mediaVolumes": {
          "description": "List of volumes that will be mounted inside jellyfin pod, to `/media`.",
          "items": {
            "properties": {
              "name": {
                "description": "Volume and directory name.",
                "type": "string"
              },
              "readOnly": {
                "description": "Is this volume read-only?",
                "type": "boolean"
              },
              "volumeSpec": {
                "$ref": "https://raw.githubusercontent.com/belug-apps/catalog/main/.json_schema/kubernetes/v1.26.1/_definitions.json#/definitions/io.k8s.api.core.v1.PersistentVolumeSpec"
              }
            },
            "required": ["name", "volumeSpec"],
            "type": "object"
          },
          "type": "array"
        },
        "persistentTranscodes": {
          "description": "Keep all transcoded files persistent.",
          "type": "boolean"
        }
      },
      "type": "object"
    }
  },
  "definitions": {
    "io.belug-apps.v1.HelmValues": {"$ref": "https://raw.githubusercontent.com/belug-apps/catalog/main/.json_schema/common/_definitions.json#/definitions/io.belug-apps.v1.HelmValues"}
  }
}